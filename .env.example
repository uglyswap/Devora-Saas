# Devora Environment Variables
# Copy this file to .env and fill in your values

# MongoDB
MONGO_PASSWORD=YourSecureMongoPassword

# JWT Secret (min 32 characters)
SECRET_KEY=YourSuperSecretJWTKey32CharsMin!

# URLs (for production, use your domain)
FRONTEND_URL=https://devora.fun
BACKEND_URL=https://api.devora.fun

# Stripe (optional - for payments)
STRIPE_API_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Resend (optional - for emails)
RESEND_API_KEY=re_xxx
